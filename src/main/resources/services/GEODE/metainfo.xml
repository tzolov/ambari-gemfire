<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>GEODE</name>
            <displayName>Geode</displayName>
            <comment>In Memory Data Grid</comment>
            <version>1.5</version>
            <components>
                <component>
                    <name>GEODE_LOCATOR</name>
                    <displayName>Geode Locator</displayName>
                    <category>MASTER</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/master.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>GEODE_SERVER</name>
                    <displayName>Geode Server</displayName>
                    <category>SLAVE</category>
                    <cardinality>1+</cardinality>
                    <dependencies>
                        <dependency>
                            <name>GEODE/GEODE_LOCATOR</name>
                            <scope>cluster</scope>
                        </dependency>
                    </dependencies>
                    <commandScript>
                        <script>scripts/slave.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
             </components>
            <configuration-dependencies>
                <config-type>geode-site</config-type>
                <config-type>geode-env</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>